{% extends('base.html.twig') %}

{% block body %}
    {{ challenge.title }}</br>
    {{ challenge.description }}</br>
    {{ challenge.category }}</br>
    {{ challenge.subcategory }}</br>
    {{ challenge.points }}</br>
    {{ challenge.duration }}</br>
    {% if user != null %}
        {% if 'ROLE_USER' in user.roles %}
        <td><a href="{{path('acceptChallenge', {uuid: challenge.uuid})}}">Participer</a></td>
        <td><a href="{{path('completeChallenge', {uuid: challenge.uuid})}}">Completer</a></td>
        {% endif %}
    {% endif %}
{% endblock %}
