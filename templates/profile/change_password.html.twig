
{% block body %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <h1>Modifier le mot de passe</h1>
    <div class="password-change" style="display:flex; justify-content: center; align-items:center; ">
        <form method="post" style="display: flex; flex-direction:column;padding:50px 40px; margin-top:120px;">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-primary">Modifier le mot de passe</button>
            <a href="{{ path('app_profile') }}" style="margin-top:10px">Retour au profil</a>
        </form>
    </div>
{% endblock %}
