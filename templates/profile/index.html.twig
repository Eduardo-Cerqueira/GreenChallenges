

{% block body %}
    <h1>Votre Profil</h1>
    <p><strong>Nom :</strong> {{ user.name }}</p>
    <p><strong>Prénom :</strong> {{ user.surname }}</p>
    <p><strong>Pseudo :</strong> {{ user.username }}</p>
    <p><strong>Pays :</strong> {{ user.country }}</p>
    <p><strong>Points:</strong> {{ points }}</p>

<a href="{{ path('app_change_password') }}" class="btn btn-primary">Modifier le mot de passe</a>
<a href="{{ path('app_logout') }}" class="btn btn-danger">Déconnexion</a>

<h2>Défis en cours :</h2>
<ul>
    {% for currentChallenge in currentChallenges %}
        {% if currentChallenge.status == 'Doing' %}
        <li><a href="{{path('showChallenge', {uuid: currentChallenge.getChallengeId.uuid})}}">{{ currentChallenge.getChallengeId.title }}</a> ({{ currentChallenge.status }})
            <a href="{{path('completeChallenge', {uuid: currentChallenge.uuid})}}">Completer</a>
            <a href="{{path('abandonChallenge', {uuid: currentChallenge.uuid})}}">Abandonner</a>
        {% endif %}
        </li>
    {% endfor %}
</ul>

<h2>Historique des défis :</h2>
<ul>
    {% for currentChallenge in currentChallenges %}
        {% if currentChallenge.status != 'Doing' %}
            <li><a href="{{path('showChallenge', {uuid: currentChallenge.getChallengeId.uuid})}}">{{ currentChallenge.getChallengeId.title }}</a> ({{ currentChallenge.status }})
        {% endif %}
        </li>
    {% endfor %}
</ul>

{% endblock %}
