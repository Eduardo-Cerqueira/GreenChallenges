<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <nav class="navbar navbar-expand-lg navbar-light bg-light" style="align-items: center;">
        <a class="navbar-brand" href="#">GreenChallenges</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
            <a class="logo" href="#">
                <img src="{{ asset('images/logogreen.png') }}" alt="logogreen" height="40px">
            </a>
            <a class="nav-item nav-link active" href="#">Challenges<span class="sr-only">(current)</span></a>
            <a class="nav-item nav-link" href="{{ path('app_register') }}">Sign In</a>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <a class="nav-item nav-link" href="{{ path('app_logout') }}">Sign Out</a>
            {% else %}
            {% if app.user %}
                {{ app.user.userIdentifier }}
            {% endif %}
                <!-- Display other links for non-authenticated users -->
            {% endif %}
            </div>
        </div>
    </nav>
    <body>
        {% block body %}{% endblock %}
    </body>
</html>
